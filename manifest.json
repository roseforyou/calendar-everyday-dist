{
  "manifest_version": 3,
  "name": "天天日历扩展",
  "version": "1.0.0",
  "description": "一个好用的日历扩展，包含农历、节气、节假日等丰富功能",
  "icons": {
    "16": "0911/favicon-16x16.png",
    "32": "0911/favicon-32x32.png",
    "48": "0911/favicon-32x32.png",
    "128": "0911/android-chrome-192x192.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.shuyz.com/*",
    "https://timor.tech/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "0911/favicon-16x16.png",
      "32": "0911/favicon-32x32.png",
      "48": "0911/favicon-32x32.png",
      "128": "0911/android-chrome-192x192.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://www.shuyz.com/ https://timor.tech/"
  },
  "devtools_page": "index.html",
  "web_accessible_resources": [{
    "resources": [
      "fonts/*.ttf",
      "fonts/*.woff"
    ],
    "matches": ["<all_urls>"]
  }]
} 